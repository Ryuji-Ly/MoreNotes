{
  "manifest_version": 3,
  "name": "Discord More Notes",
  "version": "1.0.1",
  "description": "Locally stores more Discord notes by user ID.",
  "permissions": ["storage", "scripting"],
  "host_permissions": ["https://discord.com/*"],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://discord.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "icon128.png"
  }
}
